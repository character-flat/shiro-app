<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        tools:background="@android:color/black"
>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sync_page"
            android:orientation="vertical"
    >
        <TextView
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                tools:text="The Promised Neverland"
                android:id="@+id/sync_title_"
        />
        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Status"
                    android:textColor="?attr/textColorGray"
            >
            </TextView>
            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    tools:text="Finished"
                    android:textColor="?attr/textColorGray"
                    android:id="@+id/sync_status_text"
            >
            </TextView>
        </RelativeLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <com.google.android.material.button.MaterialButton
                    style="@style/SyncButtonStyle"
                    android:id="@+id/watching_btt"
                    android:text="Watching"
            >

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                    style="@style/SyncButtonStyle"
                    android:id="@+id/completed_btt"
                    android:text="Completed"
            >
            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <com.google.android.material.button.MaterialButton
                    style="@style/SyncButtonStyle"
                    android:id="@+id/plan_to_watch_btt"
                    android:text="Planning"
            >

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                    style="@style/SyncButtonStyle"
                    android:id="@+id/on_hold_btt"
                    android:text="Paused"
            >

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
        >
            <com.google.android.material.button.MaterialButton
                    style="@style/SyncButtonStyle"
                    android:id="@+id/dropped_btt"
                    android:text="Dropped"
            >

            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                    style="@style/SyncButtonStyle"
                    android:id="@+id/rewatching_btt"
                    android:text="Rewatching"
            >

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>
        <RelativeLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Progress"
                    android:textColor="?attr/textColorGray"
                    android:id="@+id/progress_text"
            >
            </TextView>
            <androidx.core.widget.ContentLoadingProgressBar
                    android:layout_toEndOf="@+id/progress_text"
                    android:layout_toStartOf="@+id/sync_progress_txt"
                    android:paddingTop="17dp"
                    android:id="@+id/sync_progressbar"
                    android:layout_width="match_parent"
                    android:indeterminate="false"
                    tools:progress="50"
                    android:layout_marginTop="-6.3dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    style="@android:style/Widget.Material.ProgressBar.Horizontal"
                    android:layout_height="wrap_content"
            >
            </androidx.core.widget.ContentLoadingProgressBar>
            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    tools:text="140/961"
                    android:id="@+id/sync_progress_txt"
                    android:textColor="?attr/textColorGray"
            >
            </TextView>
        </RelativeLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
        >
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/number_picker_episode_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number"
            />
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
            >

                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/number_picker_episode_up"
                        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_up_24"
                >
                </ImageView>
                <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/number_picker_episode_down"
                        app:srcCompat="@drawable/ic_baseline_keyboard_arrow_down_24"
                >
                </ImageView>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Score"
                    android:textColor="?attr/textColorGray"
            >
            </TextView>
            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    tools:text="7/10 - Fine"
                    android:textColor="?attr/textColorGray"
                    android:id="@+id/sync_score"
            >
            </TextView>
        </RelativeLayout>
        <com.google.android.material.slider.Slider
                android:valueFrom="0"
                android:valueTo="10"
                android:stepSize="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/sync_score_slider"

        />
        <RelativeLayout
                android:visibility="gone"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_height="wrap_content">

            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Date"
                    android:textColor="?attr/textColorGray"
            >
            </TextView>
            <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    tools:text="Oct 20, 1999 - "
                    android:textColor="?attr/textColorGray"
            >
            </TextView>
        </RelativeLayout>
        <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/start_date"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:elevation="10dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_gravity="center_vertical"
                    android:foreground="@drawable/button_outline"
                    android:theme="@style/Button.White"
                    android:id="@+id/start_date_btt"
                    android:text="Today"
                    android:textAllCaps="false"
            />

        </LinearLayout>
        <LinearLayout
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/end_date"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:inputType="number"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:elevation="10dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_gravity="center_vertical"
                    android:foreground="@drawable/button_outline"
                    android:theme="@style/Button.White"
                    android:id="@+id/end_date_btt"
                    android:text="Today"
                    android:textAllCaps="false"
            />

        </LinearLayout>
        <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                android:layout_marginEnd="5dp"
                android:layout_height="match_parent">

            <TextView
                    android:visibility="gone"
                    android:drawableStart="@drawable/ic_baseline_delete_24"
                    android:layout_width="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="?attr/colorAccent"
                    android:foreground="@drawable/button_outline"
                    android:id="@+id/remove_btt"
                    android:text=" Remove"
                    android:drawableTint="?attr/colorAccent"
                    android:layout_alignParentStart="true"
            />
            <TextView
                    android:drawableStart="@drawable/ic_anilist_icon"
                    android:layout_width="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:foreground="@drawable/button_outline"
                    android:id="@+id/anilist_btt"
                    android:text=" Anilist"
                    android:layout_alignParentStart="true"
            />
            <TextView
                    android:drawableStart="@drawable/mal_logo"
                    android:layout_width="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:foreground="@drawable/button_outline"
                    android:id="@+id/mal_btt"
                    android:text=" MAL"
                    android:layout_toEndOf="@+id/anilist_btt"
            />
            <TextView
                    android:drawableStart="@drawable/ic_baseline_sync_24"
                    android:layout_width="wrap_content"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:elevation="10dp"
                    android:gravity="center"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:foreground="@drawable/button_outline"
                    android:id="@+id/sync_btt"
                    android:text=" Sync"
                    android:layout_alignParentEnd="true"
            />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sync_page_failed"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"

    >
        <TextView
                android:drawableStart="@drawable/ic_anilist_icon"
                android:layout_width="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:elevation="10dp"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_height="40dp"
                android:foreground="@drawable/button_outline"
                android:id="@+id/anilist_login_btt"
                android:text=" Log in to Anilist"
                android:layout_alignParentStart="true"
        />
        <TextView
                android:layout_marginTop="30dp"
                android:drawableStart="@drawable/mal_logo"
                android:layout_width="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:elevation="10dp"
                android:gravity="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_height="40dp"
                android:foreground="@drawable/button_outline"
                android:id="@+id/mal_login_btt"
                android:text=" Log in to MAL"
                android:layout_toEndOf="@+id/anilist_btt"
        />

    </LinearLayout>

</LinearLayout>