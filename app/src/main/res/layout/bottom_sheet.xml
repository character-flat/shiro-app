<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="600dp"
        android:id="@+id/bottom_sheet_root"
>
    <androidx.cardview.widget.CardView
            app:cardCornerRadius="10dp"
            android:id="@+id/bottom_sheet_top_bar"
            android:backgroundTint="?attr/backgroundColorLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:gravity="center_vertical"
                android:id="@+id/main_text"
                android:layout_margin="2dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_gravity="center_vertical"
                android:textColor="?attr/textColor" android:textSize="18sp"
                android:layout_width="wrap_content" android:layout_height="55dp"
        >
        </TextView>
    </androidx.cardview.widget.CardView>
    <ListView
            android:drawSelectorOnTop="false"
            android:listSelector="@drawable/outline_background"
            android:layout_marginTop="-10dp"
            android:paddingTop="10dp"
            android:id="@+id/sort_click"
            android:background="?attr/backgroundColorDark"
            tools:listitem="@layout/bottom_single_choice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    </ListView>
</LinearLayout>