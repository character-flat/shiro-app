<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        app:cardCornerRadius="@dimen/card_corner_radius"
        android:id="@+id/card_outline"
        android:layout_marginBottom="5dp"
>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="2dp"
            android:elevation="10dp"
            android:id="@+id/download_card_bg"
            app:cardCornerRadius="@dimen/card_corner_radius"
            app:cardBackgroundColor="?attr/backgroundColorDark">
        <!-- USING CROP RATIO (182/268), centerCrop for fill -->
        <!--<ImageView
                android:id="@+id/imageView"
                android:scaleType="centerCrop"
                android:layout_width="142dp"
                android:layout_height="80dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
        >
        </ImageView>
        <ImageView
                android:scaleType="centerInside"
                android:layout_width="142dp"
                android:layout_height="80dp"
                android:scaleX="0.5"
                android:scaleY="0.5"
                android:src="@drawable/netflix_play_btt"
        >
        </ImageView>-->

        <!-- STYLE HERE IS IMPORTANT OR ELSE IT WILL LOOK UGLY -->
        <androidx.core.widget.ContentLoadingProgressBar
                android:background="@color/transparent"
                android:id="@+id/video_progress"
                android:layout_width="match_parent"
                android:indeterminate="false"
                android:layout_gravity="start|bottom"
                android:layout_marginBottom="-6.3dp"
                style="@android:style/Widget.Material.ProgressBar.Horizontal"
                android:layout_height="wrap_content">
        </androidx.core.widget.ContentLoadingProgressBar>
        <!--TODO FIX-->
        <RelativeLayout
                android:background="@color/transparent"
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
        >
            <TextView
                    android:background="@color/transparent"
                    android:id="@+id/cardTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="15sp"
                    tools:text="E1 The promised neverland"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/textColor"
                    android:layout_toStartOf="@+id/cardTitleExtra"
                    android:layout_alignParentStart="true">
            </TextView>
            <TextView
                    android:id="@+id/cardTitleExtra"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    tools:text="125.0MB / 200.0MB"
                    android:textColor="@color/textColorGray"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="50dp"
            >
            </TextView>
        </RelativeLayout>

        <androidx.core.widget.ContentLoadingProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/progressBar"
                android:indeterminate="false"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:background="@drawable/circle_shape"
                style="?android:attr/progressBarStyleHorizontal"
                android:max="100"
                android:layout_margin="5dp"
                android:layout_gravity="end|center_vertical"
                android:progress="0"
                android:visibility="visible"
        />

        <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:id="@+id/cdi"
                android:src="@drawable/exo_icon_stop"
                app:tint="?attr/colorPrimary"
                android:layout_gravity="end|center_vertical"
                android:background="?android:attr/selectableItemBackgroundBorderless"
        />

        <!--
        <TextView
                android:id="@+id/cardDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:layout_gravity="top"
                android:layout_marginTop="20dp"
                android:textFontWeight="200"
                android:layout_marginStart="70dp"
        >
        </TextView>-->

    </androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>