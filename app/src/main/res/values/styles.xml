        <!--        <item name="android:windowAllowReturnTransitionOverlap">true</item>-->
        <!--        <item name="android:windowAllowEnterTransitionOverlap">true</item>-->
        <!-- default theme -->
        <item name="white">@color/white</item>
        <item name="textColor">@color/textColor</item>
        <item name="textColorGray">@color/textColorGray</item>
        <item name="textColorGrayWhite">@color/textColorGrayWhite</item>
        <item name="video_ripple">@color/video_ripple</item>
