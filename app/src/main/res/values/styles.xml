    <style name="Button.White" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@color/white</item>
    </style>
    <style name="Button.Black" parent="ThemeOverlay.AppCompat">
        <item name="colorPrimary">@android:color/black</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:backgroundTint">?attr/backgroundColorLight</item>
    </style>

    <style name="HomeCategoriesText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:textSize">22sp</item>
        <item name="android:padding">17dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="HomeCategoriesResView">
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="SyncButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="cornerRadius">3dp</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">?attr/textColor</item>
        <item name="android:strokeColor">?attr/textColor</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">0dp</item>


    </style>

    <style name="CustomProgressBarTheme">
        <item name="colorAccent">@color/white</item>
        <item name="android:progressBarStyle">@style/Widget.AppCompat.ProgressBar.Horizontal</item>
    </style>

